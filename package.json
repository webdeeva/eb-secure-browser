{
  "name": "everything-black",
  "productName": "Everything Black",
  "version": "1.0.20",
  "description": "Web3-enabled browser for the Everything Black ecosystem",
  "main": "main.js",
  "homepage": "https://everythingblack.xyz",
  "repository": {
    "type": "git",
    "url": "https://github.com/webdeeva/eb2new"
  },
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder",
    "dist-mac": "electron-builder --mac",
    "dist-win": "electron-builder --win",
    "dist-linux": "electron-builder --linux",
    "generate-icons": "node create-icons.js"
  },
  "keywords": [
    "browser",
    "web3",
    "ethereum",
    "wallet",
    "everythingblack"
  ],
  "author": {
    "name": "Everything Black",
    "email": "support@everythingblack.xyz"
  },
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "conf": "^13.1.0",
    "electron-log": "^5.4.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "ethers": "^6.14.3",
    "web3": "^4.3.0"
  },
  "build": {
    "appId": "com.everythingblack.browser",
    "productName": "Everything Black",
    "copyright": "Copyright Â© 2024 Everything Black",
    "directories": {
      "output": "dist"
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "identity": null,
      "type": "distribution",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal", "x64"]
        },
        {
          "target": "zip",
          "arch": ["universal", "x64"]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName} Setup ${version}-${arch}.${ext}",
      "executableName": "EverythingBlack",
      "verifyUpdateCodeSignature": false,
      "legalTrademarks": "Everything Black",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Everything Black",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true,
      "artifactName": "${productName} Setup ${version}-${arch}.${ext}",
      "include": "build/installer.nsh"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "YOUR_GITHUB_USERNAME",
        "repo": "everything-black-browser"
      }
    ]
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1"
  }
}
